{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@allors/angular/core": ["libs/angular/core/src/index.ts"],
      "@allors/angular/custom": ["libs/angular/custom/src/index.ts"],
      "@allors/angular/material/core": [
        "libs/angular/material/core/src/index.ts"
      ],
      "@allors/angular/material/custom": [
        "libs/angular/material/custom/src/index.ts"
      ],
      "@allors/angular/material/services/core": [
        "libs/angular/material/services/core/src/index.ts"
      ],
      "@allors/angular/services/core": [
        "libs/angular/services/core/src/index.ts"
      ],
      "@allors/data/system": ["libs/data/system/src/index.ts"],
      "@allors/domain/custom": ["libs/domain/custom/src/index.ts"],
      "@allors/domain/generated": ["libs/domain/generated/src/index.ts"],
      "@allors/domain/system": ["libs/domain/system/src/index.ts"],
      "@allors/gatsby/source/core": ["libs/gatsby/source/core/src/index.ts"],
      "@allors/gatsby/source/custom": [
        "libs/gatsby/source/custom/src/index.ts"
      ],
      "@allors/meta/core": ["libs/meta/core/src/index.ts"],
      "@allors/meta/custom": ["libs/meta/custom/src/index.ts"],
      "@allors/meta/generated": ["libs/meta/generated/src/index.ts"],
      "@allors/meta/system": ["libs/meta/system/src/index.ts"],
      "@allors/promise/core": ["libs/promise/core/src/index.ts"],
      "@allors/promise/custom": ["libs/promise/custom/src/index.ts"],
      "@allors/protocol/system": ["libs/protocol/system/src/index.ts"]
    },
    "preserveSymlinks": true
  },
  "exclude": ["node_modules", "tmp"]
}
