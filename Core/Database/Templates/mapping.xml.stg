xml(meta) ::= <<
<?xml version="1.0"?>
<?mso-application progid="Excel.Sheet"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
 xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
 xmlns:x="urn:schemas-microsoft-com:office:excel">
 <Styles>
  <Style ss:ID="Default" ss:Name="Normal"/>
  <Style ss:ID="Header">
   <Borders>
    <Border ss:Position="Bottom" ss:LineStyle="Continuous" ss:Weight="1" ss:Color="#000000"/>
   </Borders>
   <Font ss:Bold="1"/>
   <Interior ss:Color="#F0F0F0" ss:Pattern="Solid"/>
  </Style>
  <Style ss:ID="Unit">
   <Interior ss:Color="#E8F4F8" ss:Pattern="Solid"/>
  </Style>
  <Style ss:ID="CompositeInline">
   <Interior ss:Color="#FFF4E6" ss:Pattern="Solid"/>
  </Style>
  <Style ss:ID="CompositeTable">
   <Interior ss:Color="#F0E6FF" ss:Pattern="Solid"/>
  </Style>
 </Styles>
 <Worksheet ss:Name="Relations">
  <Table>
   <Column ss:Width="250"/>
   <Column ss:Width="150"/>
   <Column ss:Width="100"/>
   <Column ss:Width="150"/>
   <Column ss:Width="200"/>
   <Column ss:Width="200"/>
   <Row ss:StyleID="Header" ss:AutoFitHeight="0">
    <Cell><Data ss:Type="String">Relation</Data></Cell>
    <Cell><Data ss:Type="String">Type</Data></Cell>
    <Cell><Data ss:Type="String">Multiplicity</Data></Cell>
    <Cell><Data ss:Type="String">Storage Strategy</Data></Cell>
    <Cell><Data ss:Type="String">Table</Data></Cell>
    <Cell><Data ss:Type="String">Column/Relation</Data></Cell>
   </Row>
$meta.composites:{composite|$composite(composite=composite)$}$
  </Table>
  <WorksheetOptions xmlns="urn:schemas-microsoft-com:office:excel">
   <Selected/>
   <FreezePanes/>
   <FrozenNoSplit/>
   <SplitHorizontal>1</SplitHorizontal>
   <TopRowBottomPane>1</TopRowBottomPane>
   <ActivePane>2</ActivePane>
   <Panes>
    <Pane>
     <Number>3</Number>
    </Pane>
    <Pane>
     <Number>2</Number>
     <ActiveRow>0</ActiveRow>
    </Pane>
   </Panes>
  </WorksheetOptions>
  <AutoFilter x:Range="R1C1:R1C6" xmlns="urn:schemas-microsoft-com:office:excel"/>
 </Worksheet>
</Workbook>
>>

composite(composite) ::= <<
$composite.ExclusiveRoleTypes:{roleType|$relationTypeRow(composite=composite,roleType=roleType)$}$>>

relationTypeRow(composite,roleType) ::= <<
   <Row>
    <Cell ss:StyleID="$rowStyle(roleType)$"><Data ss:Type="String">$composite.Name$.$propertyName(roleType)$</Data></Cell>
    <Cell ss:StyleID="$rowStyle(roleType)$"><Data ss:Type="String">$objectTypeName(roleType)$</Data></Cell>
    <Cell ss:StyleID="$rowStyle(roleType)$"><Data ss:Type="String">$multiplicity(roleType)$</Data></Cell>
    <Cell ss:StyleID="$rowStyle(roleType)$"><Data ss:Type="String">$storageStrategy(roleType)$</Data></Cell>
    <Cell ss:StyleID="$rowStyle(roleType)$"><Data ss:Type="String">$tableName(composite, roleType)$</Data></Cell>
    <Cell ss:StyleID="$rowStyle(roleType)$"><Data ss:Type="String">$columnOrRelation(composite, roleType)$</Data></Cell>
   </Row>
>>

rowStyle(roleType) ::= <%
$if(roleType.ObjectType.IsUnit)$Unit$elseif(usesRelationTable(roleType))$CompositeTable$else$CompositeInline$endif$
%>

storageStrategy(roleType) ::= <%
$if(roleType.ObjectType.IsUnit)$Inline (Unit)$elseif(usesRelationTable(roleType))$Relation Table$else$Inline (Column)$endif$
%>

tableName(composite, roleType) ::= <%
$if(roleType.ObjectType.IsUnit)$allors.$tolower(composite.SingularName)$$elseif(usesRelationTable(roleType))$allors.$relationTableName(composite, roleType)$$else$allors.$targetTableName(composite, roleType)$$endif$
%>

columnOrRelation(composite, roleType) ::= <%
$if(roleType.ObjectType.IsUnit)$$tolower(roleType.SingularPropertyName)$$elseif(usesRelationTable(roleType))$(a: $composite.SingularName$ ID, r: $roleType.ObjectType.SingularName$ ID)$else$$columnName(composite, roleType)$$endif$
%>

relationTableName(composite, roleType) ::= <%
$tolower(composite.SingularName)$_$tolower(roleType.ObjectType.SingularName)$
%>

targetTableName(composite, roleType) ::= <%
$if(roleType.RelationType.IsOneToMany)$$tolower(roleType.ObjectType.SingularName)$$else$$tolower(composite.ExclusiveClass.SingularName)$$endif$
%>

columnName(composite, roleType) ::= <%
$if(roleType.RelationType.IsOneToMany)$$tolower(composite.SingularName)$ (association back-ref)$else$$tolower(roleType.SingularPropertyName)$$endif$
%>

usesRelationTable(roleType) ::= <%
$if(!roleType.ObjectType.IsUnit)$$if(roleType.RelationType.IsManyToMany)$true$elseif(!roleType.ObjectType.ExistExclusiveClass)$true$elseif(!roleType.AssociationType.ObjectType.ExistExclusiveClass)$true$endif$$endif$
%>

multiplicity(roleType) ::= <%
$if(!roleType.ObjectType.IsUnit)$$relationMultiplicity(roleType.RelationType)$$endif$
%>

relationMultiplicity(relationType) ::= <%
$if(relationType.IsOneToOne)$1-1$endif$
$if(relationType.IsOneToMany)$1-*$endif$
$if(relationType.IsManyToOne)$*-1$endif$
$if(relationType.IsManyToMany)$*-*$endif$
%>

propertyName(roleType) ::= <%
$if(roleType.IsOne)$$roleType.SingularPropertyName$$else$$roleType.PluralPropertyName$$endif$
%>

objectTypeName(roleType) ::= <%
$if(roleType.ObjectType.IsUnit)$$if(roleType.ObjectType.IsBinary)$Binary$elseif(roleType.ObjectType.IsBoolean)$Boolean$elseif(roleType.ObjectType.IsDateTime)$DateTime$elseif(roleType.ObjectType.IsDecimal)$Decimal$elseif(roleType.ObjectType.IsFloat)$Float$elseif(roleType.ObjectType.IsInteger)$Integer$elseif(roleType.ObjectType.IsString)$String$elseif(roleType.ObjectType.IsUnique)$Unique$endif$$else$$roleType.ObjectType.SingularName$$endif$
%>

tolower(text) ::= <%$text; format="lower"$%>
