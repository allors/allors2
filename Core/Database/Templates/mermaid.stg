diagram(meta) ::= <<
classDiagram
$meta.composites:{composite|$composite(meta=meta,composite=composite)$}$

$meta.composites:{composite|$relations(composite=composite)$}$

$meta.composites:{composite|$inheritance(composite=composite)$}$
>>

composite(meta,composite) ::= <<
	class $composite.Name$ {
$if(composite.IsInterface)$		$interfaceMarker()$
$endif$$composite.ExclusiveUnitRoleTypes:{roleType|$property(roleType=roleType)$}; separator="\n"$
    }

>>

property(roleType) ::= <<
		$propertyType(roleType)$ $prefix(roleType)$$roleType.SingularPropertyName$
>>

propertyType(roleType) ::= <%
$if(roleType.ObjectType.IsUnit)$$if(roleType.ObjectType.IsBinary)$byte[]$elseif(roleType.ObjectType.IsBoolean)$bool$elseif(roleType.ObjectType.IsDateTime)$DateTime$elseif(roleType.ObjectType.IsDecimal)$decimal$elseif(roleType.ObjectType.IsFloat)$double$elseif(roleType.ObjectType.IsInteger)$int$elseif(roleType.ObjectType.IsString)$string$elseif(roleType.ObjectType.IsUnique)$Guid$endif$$else$$roleType.ObjectType.SingularName$$endif$
%>

prefix(roleType) ::= <%
$if(roleType.RelationType.IsDerived)$_$endif$$if(roleType.RelationType.IsSynced)$__$endif$
%>

interfaceMarker() ::= <%<<interface>>%>

relations(composite) ::= <<
$composite.ExclusiveCompositeRoleTypes:{roleType|$relation(composite=composite,roleType=roleType)$}; separator="\n"$

>>

relation(composite, roleType) ::= <<
$composite.Name$ --> $roleType.ObjectType.Name$ : $if(roleType.IsOne)$$prefix(roleType)$$roleType.SingularPropertyName$$else$$prefix(roleType)$$roleType.PluralPropertyName$$endif$
>>

inheritance(composite) ::= <<
$if(composite.ExistDirectSupertypes)$$composite.DirectSupertypes:{supertype|	$supertype.Name$ <|-- $composite.Name$
}$$endif$
>>
