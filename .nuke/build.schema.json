{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "DotNetVerbosity": {
          "type": "string",
          "description": "DotNet Verbosity",
          "enum": [
            "Detailed",
            "Diagnostic",
            "Minimal",
            "Normal",
            "Quiet"
          ]
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "CiDemosTest",
              "CiDotnetAppsDatabaseTest",
              "CiDotnetAppsWorkspaceTest",
              "CiDotnetBaseDatabaseTest",
              "CiDotnetBaseWorkspaceTest",
              "CiDotnetCoreDatabaseTest",
              "CiDotnetCoreWorkspaceLocalTest",
              "CiDotnetCoreWorkspaceRemoteJsonRestSharpTest",
              "CiDotnetCoreWorkspaceRemoteJsonSystemTextTest",
              "CiDotnetLegacyDatabaseTest",
              "CiDotnetSystemAdaptersTestMemory",
              "CiDotnetSystemAdaptersTestNpgsql",
              "CiDotnetSystemAdaptersTestSqlClient",
              "CiDotnetSystemWorkspaceTest",
              "CiTypescriptWorkspaceAsyncTest",
              "CiTypescriptWorkspaceReactiveTest",
              "CiTypescriptWorkspaceTest",
              "Clean",
              "Default",
              "DemosDerivation",
              "DemosDerivationGenerate",
              "DemosDerivationTest",
              "DemosSecurity",
              "DemosSecurityGenerate",
              "DemosSecurityTest",
              "DotnetApps",
              "DotnetAppsDatabaseTest",
              "DotnetAppsDatabaseTestDomain",
              "DotnetAppsGenerate",
              "DotnetAppsInstall",
              "DotnetAppsMerge",
              "DotnetAppsPublishCommands",
              "DotnetAppsPublishServer",
              "DotnetAppsResetDatabase",
              "DotnetAppsTest",
              "DotnetAppsWorkspaceTest",
              "DotnetAppsWorkspaceTypescriptSession",
              "DotnetAppsWorkspaceTypescriptTest",
              "DotnetBase",
              "DotnetBaseDatabaseTest",
              "DotnetBaseDatabaseTestDomain",
              "DotnetBaseGenerate",
              "DotnetBaseInstall",
              "DotnetBaseMerge",
              "DotnetBasePublishCommands",
              "DotnetBasePublishServer",
              "DotnetBaseResetDatabase",
              "DotnetBaseTest",
              "DotnetBaseWorkspaceTest",
              "DotnetBaseWorkspaceTypescriptSession",
              "DotnetBaseWorkspaceTypescriptTest",
              "DotnetCore",
              "DotnetCoreDatabaseTest",
              "DotnetCoreDatabaseTestDomain",
              "DotnetCoreDatabaseTestMeta",
              "DotnetCoreDatabaseTestServerLocal",
              "DotnetCoreDatabaseTestServerRemote",
              "DotnetCoreGenerate",
              "DotnetCoreInstall",
              "DotnetCoreMerge",
              "DotnetCorePublishCommands",
              "DotnetCorePublishServer",
              "DotnetCoreResetDatabase",
              "DotnetCoreTest",
              "DotnetCoreWorkspaceLocalTest",
              "DotnetCoreWorkspaceRemoteJsonRestSharpTest",
              "DotnetCoreWorkspaceRemoteJsonSystemTextTest",
              "DotnetCoreWorkspaceTest",
              "DotnetLegacy",
              "DotnetLegacyDatabaseTest",
              "DotnetLegacyDatabaseTestDomain",
              "DotnetLegacyGenerate",
              "DotnetLegacyMerge",
              "DotnetLegacyTest",
              "DotnetSystemAdapters",
              "DotnetSystemAdaptersGenerate",
              "DotnetSystemAdaptersTestMemory",
              "DotnetSystemAdaptersTestNpgsql",
              "DotnetSystemAdaptersTestSqlClient",
              "DotnetSystemInstall",
              "DotnetSystemWorkspaceTest",
              "DotnetSystemWorkspaceTypescript",
              "EnsureDirectories",
              "Generate",
              "Install",
              "PostgresDocker",
              "TypescriptInstall",
              "TypescriptWorkspaceAdaptersJsonSystemAsync",
              "TypescriptWorkspaceAdaptersJsonSystemReactive",
              "TypescriptWorkspaceAdaptersSystem",
              "TypescriptWorkspaceAsyncTest",
              "TypescriptWorkspaceMetaJsonSystem",
              "TypescriptWorkspaceReactiveTest",
              "TypescriptWorkspaceTest"
            ]
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "CiDemosTest",
              "CiDotnetAppsDatabaseTest",
              "CiDotnetAppsWorkspaceTest",
