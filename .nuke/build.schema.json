              "DotnetLegacy",
              "DotnetLegacyDatabaseTest",
              "DotnetLegacyDatabaseTestDomain",
              "DotnetLegacyGenerate",
              "DotnetLegacyMerge",
              "DotnetLegacyTest",
              "DotnetSystemAdapters",
              "DotnetSystemAdaptersGenerate",
              "DotnetSystemAdaptersTestMemory",
              "DotnetSystemAdaptersTestNpgsql",
              "DotnetSystemAdaptersTestSqlClient",
              "DotnetSystemInstall",
              "DotnetSystemWorkspaceTest",
              "DotnetSystemWorkspaceTypescript",
              "EnsureDirectories",
              "Generate",
              "Install",
              "PostgresDocker",
              "TypescriptInstall",
              "TypescriptWorkspaceAdaptersJsonSystemAsync",
              "TypescriptWorkspaceAdaptersJsonSystemReactive",
              "TypescriptWorkspaceAdaptersSystem",
              "TypescriptWorkspaceAsyncTest",
              "TypescriptWorkspaceMetaJsonSystem",
              "TypescriptWorkspaceReactiveTest",
              "TypescriptWorkspaceTest"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}