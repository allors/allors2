{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/build",
  "title": "Build Schema",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "DotNetVerbosity": {
          "type": "string",
          "description": "DotNet Verbosity",
          "enum": [
            "detailed",
            "diagnostic",
            "minimal",
            "normal",
            "quiet"
          ]
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "Adapters",
              "AdaptersGenerate",
              "AdaptersResetDatabase",
              "AdaptersTestMemory",
              "AdaptersTestNpgsql",
              "AdaptersTestSqlClient",
              "All",
              "Base",
              "BaseDatabaseTest",
              "BaseDatabaseTestDomain",
              "BaseGenerate",
              "BaseInstall",
              "BaseMerge",
              "BasePublishCommands",
              "BasePublishServer",
              "BaseResetDatabase",
              "BaseScaffold",
              "BaseTest",
              "BaseWorkspaceIntranetGenericTests",
              "BaseWorkspaceIntranetInvoiceTests",
              "BaseWorkspaceIntranetOrderTests",
              "BaseWorkspaceIntranetOtherTests",
              "BaseWorkspaceIntranetProductTests",
              "BaseWorkspaceIntranetRelationTests",
              "BaseWorkspaceIntranetShipmentTests",
              "BaseWorkspaceIntranetWorkEffortTests",
              "BaseWorkspaceTypescriptDomain",
              "BaseWorkspaceTypescriptTest",
              "Clean",
              "Core",
              "CoreDatabaseTest",
              "CoreDatabaseTestDomain",
              "CoreDatabaseTestServer",
              "CoreGenerate",
              "CoreInstall",
              "CoreMerge",
              "CorePublishCommands",
              "CorePublishServer",
              "CoreResetDatabase",
              "CoreScaffold",
              "CoreTest",
              "CoreWorkspaceCSharpDomainTests",
              "CoreWorkspaceCSharpTest",
              "CoreWorkspaceTest",
              "CoreWorkspaceTypescriptAngular",
              "CoreWorkspaceTypescriptDomain",
              "CoreWorkspaceTypescriptMaterialTests",
              "CoreWorkspaceTypescriptPromise",
              "CoreWorkspaceTypescriptTest",
              "Default",
              "Derivation",
              "DerivationGenerate",
              "DerivationTest",
              "EnsureDirectories",
              "Generate",
              "Install",
              "ResetDatabase",
              "Scaffold"
            ]
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "Adapters",
              "AdaptersGenerate",
              "AdaptersResetDatabase",
              "AdaptersTestMemory",
              "AdaptersTestNpgsql",
              "AdaptersTestSqlClient",
              "All",
              "Base",
              "BaseDatabaseTest",
              "BaseDatabaseTestDomain",
              "BaseGenerate",
              "BaseInstall",
              "BaseMerge",
              "BasePublishCommands",
              "BasePublishServer",
              "BaseResetDatabase",
              "BaseScaffold",
              "BaseTest",
              "BaseWorkspaceIntranetGenericTests",
              "BaseWorkspaceIntranetInvoiceTests",
              "BaseWorkspaceIntranetOrderTests",
              "BaseWorkspaceIntranetOtherTests",
              "BaseWorkspaceIntranetProductTests",
              "BaseWorkspaceIntranetRelationTests",
              "BaseWorkspaceIntranetShipmentTests",
              "BaseWorkspaceIntranetWorkEffortTests",
              "BaseWorkspaceTypescriptDomain",
              "BaseWorkspaceTypescriptTest",
              "Clean",
              "Core",
              "CoreDatabaseTest",
              "CoreDatabaseTestDomain",
              "CoreDatabaseTestServer",
              "CoreGenerate",
              "CoreInstall",
              "CoreMerge",
              "CorePublishCommands",
              "CorePublishServer",
              "CoreResetDatabase",
              "CoreScaffold",
              "CoreTest",
              "CoreWorkspaceCSharpDomainTests",
              "CoreWorkspaceCSharpTest",
              "CoreWorkspaceTest",
              "CoreWorkspaceTypescriptAngular",
              "CoreWorkspaceTypescriptDomain",
              "CoreWorkspaceTypescriptMaterialTests",
              "CoreWorkspaceTypescriptPromise",
              "CoreWorkspaceTypescriptTest",
              "Default",
              "Derivation",
              "DerivationGenerate",
              "DerivationTest",
              "EnsureDirectories",
              "Generate",
              "Install",
              "ResetDatabase",
              "Scaffold"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}
