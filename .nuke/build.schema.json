              "CiTypescriptWorkspaceTest",
              "Clean",
              "Default",
              "DemosDerivation",
              "DemosDerivationGenerate",
              "DemosDerivationTest",
              "DemosSecurity",
              "DemosSecurityGenerate",
              "DemosSecurityTest",
              "DotnetApps",
              "DotnetAppsDatabaseTest",
              "DotnetAppsDatabaseTestDomain",
