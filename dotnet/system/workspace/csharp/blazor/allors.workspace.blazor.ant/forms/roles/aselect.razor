<FormItem @attributes="Attributes">

    <Select @bind-Value="@ModelId"
            TItemValue="long"
            TItem="IObject">
        <SelectOptions>

            @if (this.Model == null || !this.Required)
            {
                <SelectOption TItemValue="long" TItem="IObject" Value="0" Label="@EmptyValue" />
            }

            @foreach (var option in Options)
            {
                <SelectOption TItemValue="long" TItem="IObject" Value="@option.Id" Label="@DisplayOption(option)" />
            }

        </SelectOptions>
    </Select>

</FormItem>
