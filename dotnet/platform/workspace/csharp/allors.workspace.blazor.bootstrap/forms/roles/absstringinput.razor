@inherits ABSStringInputBase

<BSFormGroup @attributes="Attributes">
    @if (ShowLabel)
    {
        <BSLabel>@Label</BSLabel>
    }
    @if (HideValidation)
    {
        <input type="string" class="form-control" @bind="StringModel" />
    }
    else
    {
        <BSInput InputType="InputType" @bind-Value="StringModel"></BSInput>
        <BSFormFeedback For="@(() => Model)" ValidMessage="@ValidMessage" />
    }
</BSFormGroup>
